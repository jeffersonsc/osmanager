<h1> Editar funcionario </h1>

<div class="form">
<%= form_for(@editar_funcionarios) do |f| %>
	
	<p> funcionario status:
		<% if @editar_funcionarios[0].status == false %>			
			<%= f.radio_button :status ,true  %>
			<%= label :status, 'Ativar funcionario' %>
			<% else %>
			Funcionario Ativo
		<% end %>
	</p>

	<p> Nome: 
	<%= f.text_field :nome %>
	<p>
	<p> Enredeco: 
	<%= f.select :endereco_id , @endereco.collect { |a| [a.endereco + ", " + a.bairro + ", " + a.cidade + ", " + a.uf , a.id]}%> NÂº: <%= f.text_field :endereco_n, :size => "5" %> <%= link_to "Cadastrar", "#" %>
	<p>
	<p> Telefone 1:
		<%= f.text_field :telefone1 %>		
	</p>
	<p> Telefone 2:
		<%= f.text_field :telefone2 %>		
	</p>
	<p> Celular:
		<%= f.text_field :celular %>		
	</p>
	<p> RG:
		<%= f.text_field :rg%>		
	</p>
	<%= f.submit 'Salvar' %>
<% end %>
</div>

