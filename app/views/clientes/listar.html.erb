<h1> Lista de clientes </h1>

<%= link_to image_tag("icones/add.ico"),  { action: 'novo', :controller => "clientes" , tp_cliente: "fisica"} %>
<%= link_to "Cadastrar cliente PF",  { action: 'novo', :controller => "clientes" , tp_cliente: "fisica"} %>
<%= link_to image_tag("icones/add.ico"), { action: 'novo', :controller => "clientes" , tp_cliente: "juridica"} %>
<%= link_to "Cadastrar cliente PJ", { action: 'novo', :controller => "clientes" , tp_cliente: "juridica"} %>
	<table>
		<tr>
			<td> Nome</td>			
			<td> Tipo Cliente</td>
			<td> Status cliente </td>
			<td> Cadastrado em </td>
			<td> Ultima alteração </td>
		</tr>
	<% @lista_clientes.each do |cliente| %>		
		<tr>
			<td> <%= cliente.nome %><%= cliente.raz_social %> </td>			
			<td> <%= cliente.tp_cliente %> </td>
			<td>
				<% if cliente.status == true %>
						<%=link_to image_tag("icones/apply.ico") , { :action => 'bloquear' , :controller => 'clientes', cliente_id: cliente.id }%>
					<% else %>
						<%= link_to image_tag("icones/erase.ico") , { :action => 'desbloquear' , :controller => 'clientes', cliente_id: cliente.id }%>
				<% end %>
			</td>
			<td> 				
				<%= cliente.dt_cadastro.strftime('%d/%m/%Y as %H:%M')%> 
			</td>

			<td> 
				<% if cliente.ultima_alteracao == nil %>
				<% else %>
				<%= cliente.ultima_alteracao.strftime('%d/%m/%Y as %H:%M')%> 
				<% end %>
			</td>
				
			<td> <%= link_to 'Exibir detalhes' , action: 'exibir' , id: cliente.id %> </td>
		</tr>
	<% end %>
</table>

