<script>
	
		$(document).ready(){
			function{
				$("#endereco").hide();
			}
		}	
</script>

<h1> Cliente: <%= @clientes[0].nome %> </h1> 
<div class="form">
	<table>
	<% @clientes.each do |cliente| %>	
			<tr>
				<% if cliente.tp_cliente == true %>
					<td> Nome</td>
					<td> <%= cliente.nome %> </td>
					<% if cliente.tp_cliente == false %>
						<td> Razão Social</td>
						<td> <%= cliente.rz_social %> </td>
					<% end %>
				<%end%>			
			</tr>
			<div id="endereco" style="background-color: red;">
				<tr>
					<td> CEP </td>
					<td> <%= cliente.cep %> </td>
				</tr>
				<tr>
					<td> Endereço </td>
					<td> <%= cliente.endereco %>, <%= cliente.numero %> </td>
				</tr>
				<tr>				
					<td> Bairro </td>
					<td> <%= cliente.bairro %> </td>
				</tr>
				<tr>
					<td> Cidade </td>
					<td> <%= cliente.cidade %> UF: <%= cliente.estado %> </td>
				</tr>			
				<tr>
					<td> Telefone 1</td>
					<td> <%= cliente.telefone1 %> </td>
				</tr>
				<tr>
					<td> Telefone 2</td>
					<td> <%= cliente.telefone2 %> </td>
				</tr>
				<tr>
					<td> Telefone 3</td>
					<td> <%= cliente.telefone3 %> </td>
				</tr>
			</div>
			<tr>
				<td> Celular </td>
				<td> <%= cliente.celular %> </td>
			</tr>
			<tr>
				<td> RG </td>
				<td> <%= cliente.rg %> </td>
			</tr>
			<tr>
				<td> Tipo Cliente</td>
				<td> <%= cliente.tp_cliente %> </td>
			</tr>
			<tr>
				<td> Status cliente </td>
				<td>
				<% if cliente.status == false %>
					Ativo
					<% else %>
					Bloqueado
				<% end %>
				<td>
			</tr>
			<tr>
				<td> Criado em </td>
				<td> <%= cliente.created_at.strftime('%d/%m/%Y as %H:%M') %></td>
			</tr>
			<tr>
				<td> Ultima alteração </td>
				<td> 
					<% if not cliente.updated_at.nil? %>					
						<%= cliente.updated_at.strftime('%d/%m/%Y as %H:%M')%> 
					<% end %>
				</td>
			</tr>
			<% end %>
</table>
<%= link_to 'Editar' , action: 'editar', id: params[:id] %>
<%= link_to 'Bloquear' , action: 'bloquear', cliente_id: params[:id]  %>
</div>