<h1> Editar Cliente </h1>

<div class="form">
	<%= form_for(@clientes , :action => :update , :html => {:multpart => true}) do |f| %>
	<% if @clientes.errors.any? %>
	    <ul>
	      <% @clientes.errors.full_messages.each do |msg| %>
	      <li><%= msg %></li>
	      <% end %>
	    </ul>
	 <% end %>
	 	<%= f.hidden_field(:id) %>
		<%= render(:partial => "form_clientes" , :locals => { :f => f} ) %>
	<% end %>
</div>

<%= link_to 'Voltar', action: 'listar' %>